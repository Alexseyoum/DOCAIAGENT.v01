# Server Configuration
NODE_ENV=development
PORT=3000

# LLM Provider Selection (groq, gemini, or anthropic)
# Groq and Gemini are FREE!
LLM_PROVIDER=groq

# LLM API Keys (only need the one you're using)
# Get Groq API key (FREE): https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# Get Gemini API key (FREE): https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Anthropic Claude (PAID)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# File Upload Settings
MAX_FILE_SIZE_MB=50
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=10

# Document Settings
DOCUMENT_RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
